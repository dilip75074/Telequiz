<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.telequiz">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.home.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Account:- Login Activity -->
        <activity
            android:name=".activities.account.LoginActivity"
            android:parentActivityName=".activities.home.MainActivity"
            android:screenOrientation="portrait" />

        <!-- Account:- SignUp Activity -->
        <activity
            android:name=".activities.account.SignUpActivity"
            android:parentActivityName=".activities.account.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- Account:- Forgot Password Activity -->
        <activity
            android:name=".activities.account.ForgotPasswordActivity"
            android:parentActivityName=".activities.account.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- Account:- Change Password Activity -->
        <activity
            android:name=".activities.account.ChangePasswordActivity"
            android:parentActivityName=".activities.home.MainActivity"
            android:screenOrientation="portrait" />

        <!-- CreatorStudio:- Dashboard Activity -->
        <!-- android:parentActivityName=".activities.home.MainActivity" -->
        <activity
            android:name=".activities.creatorStudio.DashboardActivity"
            android:parentActivityName=".activities.home.MainActivity"
            android:screenOrientation="portrait" />

        <!-- CreatorStudio:- Upload Question Activity -->
        <activity
            android:name=".activities.creatorStudio.uploadQuestion.UploadQuestionActivity"
            android:parentActivityName=".activities.creatorStudio.DashboardActivity"
            android:screenOrientation="portrait" />

        <!-- CreatorStudio:- Full analytics Activity -->
        <activity
            android:name=".activities.creatorStudio.channel.channelAnalytics.ChannelAnalyticsActivity"
            android:parentActivityName=".activities.creatorStudio.DashboardActivity"
            android:screenOrientation="portrait" />

        <!-- CreatorStudio:- Quesiton Review Activity -->
        <activity
            android:name=".activities.creatorStudio.uploadQuestion.UploadedQuestionReviewActivity"
            android:parentActivityName=".activities.creatorStudio.uploadQuestion.UploadQuestionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.creatorStudio.channel.createChannel.CreateChannelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.creatorStudio.revenue.RevenueReportActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.creatorStudio.channel.deleteChannel.DeleteChannelActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.AppUpdateNotificationActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.quiz.PlayQuizActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.sdkPermission.SdkPermissionManagerActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>