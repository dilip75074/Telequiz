<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.telequiz">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.account.LoginActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />

        <!-- SignUp Activity -->
        <activity
            android:name=".activities.account.SignUpActivity"
            android:parentActivityName=".activities.account.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".activities.account.ForgotPasswordActivity"
            android:parentActivityName=".activities.account.LoginActivity"
            android:screenOrientation="portrait" />

        <!--Change Password Activity-->
        <activity
            android:name=".activities.account.ChangePasswordActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>