<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.account.SignUpActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- Email Label -->
                    <EditText android:id="@+id/input_first_name"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:drawableLeft="@drawable/icon_name"
                        android:drawableRight="@drawable/icon_required_field_star_mark"
                        android:hint="First Name"
                        android:layout_weight="1"
                        android:nextFocusDown="@+id/input_last_name"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <EditText android:id="@+id/input_last_name"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:drawableLeft="@drawable/icon_name"
                        android:drawableRight="@drawable/icon_required_field_star_mark"
                        android:hint="Last Name"
                        android:layout_weight="1" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:drawableLeft="@drawable/icon_email"
                    android:drawableRight="@drawable/icon_required_field_star_mark"
                    android:nextFocusDown="@id/input_password"/>

            </LinearLayout>
                <!-- Password Label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/icon_password"
                        android:drawableRight="@drawable/icon_required_field_star_mark"
                        android:layout_weight="1"
                        android:nextFocusDown="@id/input_confirm_password"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/input_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/icon_password"
                    android:drawableRight="@drawable/icon_required_field_star_mark"
                    android:layout_weight="1"
                    android:nextFocusDown="@id/input_mobile_no"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
            </LinearLayout>
                <!--Confirm Password Label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/input_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:drawableLeft="@drawable/icon_mobile"
                        android:drawableRight="@drawable/icon_required_field_star_mark"
                        android:nextFocusDown="@id/term_of_service_check_box"/>
                </LinearLayout>

                <!--Confirm Password Label -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp">
                    <CheckBox
                        android:id="@+id/term_of_service_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I agree to the"
                        android:checked="true"/>

                    <TextView
                        android:id="@+id/term_of_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint=" term of service"
                        android:inputType="text"
                        android:textColor="@color/colorAccent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"/>
                </LinearLayout>
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/background_login_button"
                    android:padding="12dp"
                    android:text="Sign Up"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <TextView android:id="@+id/link_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Already have account? Login"
                    android:gravity="center"
                    android:textSize="16dip"
                    android:textColor="@color/colorAccent"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>